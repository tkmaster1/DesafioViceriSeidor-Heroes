@{
    ViewData["Title"] = "Superheroes Page";
}
<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Listagem de Super-heróis</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">Super-herói</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@* <partial name="_CreateSuperheroes" />
 *@<section class="content">
    <div class="container-fluid">
        <div class="card" id="dvSuperheroes" v-cloak>

            @*  <partial name="_UpdateSuperheroes" />
            <partial name="_DeleteSuperheroes" /> *@

            <div class="card card-default">
                <div class="card-header alert-dark">
                    <h3 class="card-title">
                        <i class="fas fa-filter"></i>&nbsp;Filtros
                    </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <partial name="_FilterPartial" />
                </div>
            </div>

            <div class="card-header alert-dark">
                <h3 class="card-title">
                    <i class="fa fa-fw fa-bars"></i>&nbsp;
                    Resultados
                </h3>
                <div class="card-tools">
                    <a href="#modalCreateSuperhero" data-bs-toggle="modal" class="btn btn-success btn-sm">
                        <i class="fa fa-fw fa-plus" data-bs-toggle="tooltip" title="Adicionar Superhero"></i>
                    </a>
                </div>
            </div>

            <!-- Tabela -->
            <div class="card-body p-0">
                <partial name="_TableAndPaginationPartial" />
            </div>
            <loading v-model:active="isLoading" :is-full-page="fullPage" color="#530daf" />
        </div>
        <!-- /.card -->
    </div>
</section>

@section Scripts {
    <script src="~/vue/views/mensagemSucessoErro/msgToast-vue.js"></script>
    <script src="~/vue/views/superheroes/tablePagination-vue.js"></script>
    <script src="~/vue/views/superheroes/superheroes-vue.js"></script>
    <script src="~/vue/views/superheroes/registerSuperheroes-vue.js"></script>
}